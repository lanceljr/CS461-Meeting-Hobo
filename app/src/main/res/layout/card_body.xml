<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/talkingTimeStatic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Talking Time"/>

            <TextView
                android:id="@+id/talkingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:text="21 minutes"/>
        </LinearLayout>

        <ImageView
            android:layout_weight="1"
            android:gravity="end"
            android:id="@+id/deleteMeeting"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            app:srcCompat="@drawable/img"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/commonWordStatic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Most Common Word"/>

    <TextView
        android:id="@+id/commonWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Workflow Diagram"/>

</LinearLayout>