<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/black"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="70px"
        tools:context=".MainActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Welcome, " />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#FF0000"
                android:text="Lance" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="0.15in"
            android:layout_marginBottom="0.15in"
            android:layout_width="296dp"
            android:layout_height="267dp"
            app:srcCompat="@drawable/main_picture" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ear"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="0.15in"
                android:layout_marginBottom="0.15in"
                app:srcCompat="@drawable/ear" />
            <TextView
                android:id="@+id/textInstruction1a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="#FF0000"
                android:text="Find a quiet place free of background noise like farts, moaning etc" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/mic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="0.15in"
                android:layout_marginBottom="0.15in"
                app:srcCompat="@drawable/mic" />
            <TextView
                android:id="@+id/textInstruction2a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#FF0000"
                android:text="Our app automatically captures key points and inserts them into the meeting notes" />
        </LinearLayout>


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:textAlignment="textStart"
            android:textColor="#FF0000"
            android:background="@drawable/get_started_button"
            android:text="Get Started"
            />




    </LinearLayout>

</FrameLayout>